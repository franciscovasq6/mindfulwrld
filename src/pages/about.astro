---
import { getEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

// Get about page content from CMS
const aboutContent = await getEntry('pages', 'about');
const { title } = aboutContent.data;
const { Content } = await aboutContent.render();
---

<BaseLayout
  title="About"
  description="Learn more about mindfulwrld and our mission to promote mindfulness and intentional living."
>
  <section class="about-page">
    <div class="container">
      <div class="about-content">
        <h1>{title}</h1>

        <div class="prose">
          <Content />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .about-page {
    padding: var(--space-16) 0;
    min-height: 60vh;
  }

  .about-content {
    max-width: var(--max-width-prose);
    margin: 0 auto;
  }

  .about-content h1 {
    font-size: var(--font-size-5xl);
    color: var(--color-black);
    margin-bottom: var(--space-8);
    text-align: center;
  }

  .cta {
    margin-top: var(--space-12);
    text-align: center;
  }

  @media (max-width: 768px) {
    .about-page {
      padding: var(--space-12) 0;
    }

    .about-content h1 {
      font-size: var(--font-size-3xl);
    }
  }
</style>
